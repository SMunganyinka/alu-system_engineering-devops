#!/usr/bin/env bash
# Install and configure Nginx to return a 200, and ONLY print that 200

set -e

# Install nginx silently
apt-get update -y > /dev/null 2>&1
apt-get install nginx -y > /dev/null 2>&1

# Add the required page content
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart nginx using service (not systemctl), silently
service nginx start > /dev/null 2>&1 || true
service nginx restart > /dev/null 2>&1 || true

# Print only the status code
curl -s -o /dev/null -w "%{http_code}" http://localhost/
